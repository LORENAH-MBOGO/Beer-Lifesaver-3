<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/imageViewHome"
        android:src="@drawable/homepage"
        android:alpha="1.0"
        android:scaleType="centerCrop"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beer Lifesaver!"
        android:fontFamily="cursive"
        android:id="@+id/tLogo"
        android:layout_marginTop="146dp"
        android:textSize="60sp"
        android:textStyle="bold"
        android:textColor="@color/bright_foreground_material_dark" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:id="@+id/BeerInput"
        android:background="#99ffffff"
        android:padding="10dp"
        android:textColorHint="@color/black"
        android:hint="Search for beer styles like: pale, ale, cider..."
        android:textAlignment="center"
        android:singleLine="true"
        android:layout_weight="0.36"
        android:layout_marginBottom="87dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="Find"
        android:id="@+id/bSearch"
        android:textColor="@color/colorTextIcons"
        android:textStyle="normal|bold"
        android:background="@color/colorAccent"
        android:layout_marginBottom="25dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="17sp"
        android:text="See my Saved Styles"
        android:id="@+id/bSaved"
        android:textColor="@color/colorTextIcons"
        android:textStyle="normal|bold"
        android:background="@color/colorAccent" />

</LinearLayout>